{
    "image": "{{ edpm_nova_compute_image }}",
    "privileged": true,
    "user": "root",
    "restart": "always",
    "command": "kolla_start",
    "net": "host",
    "environment": {
        "KOLLA_CONFIG_STRATEGY":"COPY_ALWAYS"
    },
    "volumes": [
        "{{ edpm_nova_nvme_cleaner_config_dest }}:/var/lib/kolla/config_files:ro",
{% if ca_bundle_exists|bool %}
        "{{ edpm_nova_tls_ca_src_dir }}/tls-ca-bundle.pem:/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem:ro,z",
{% endif %}
        "{{ edpm_nova_config_dest }}:/var/lib/kolla/config_files/nova_shared:ro",
        "/dev:/dev",
        "/etc/nvme:/etc/nvme"
    ]
}
